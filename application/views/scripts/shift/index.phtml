<script>
$(document).ready(function() {
    // Get workset ID from PHP variable
    const worksetId = <?= json_encode($this->worksetId) ?>;

    if (!worksetId) {
        console.error('Workset ID is required');
        $('#message-container').html(`
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> Workset ID is missing. Cannot initialize shift management.
            </div>
        `);
        return;
    }

    // Initialize ShiftManager
    console.log('Initializing ShiftManager with workset ID:', worksetId);
    window.shiftManager = new ShiftManager(worksetId);

    // Handle edit modal save button
    $('#save-shift').on('click', function() {
        const formData = new FormData(document.getElementById('edit-shift-form'));
        const shiftData = Object.fromEntries(formData.entries());
        const shiftId = shiftData.shift_id;

        delete shiftData.shift_id; // Remove from update data

        window.shiftManager.updateShiftData(shiftId, shiftData)
            .then(() => {
                $('#edit-shift-modal').modal('hide');
            })
            .catch(error => {
                console.error('Update failed:', error);
            });
    });

    // Handle add shift button
    $('#add-shift').on('click', function() {
        // Clear form and show modal
        document.getElementById('edit-shift-form').reset();
        $('#edit-shift-id').val('');
        $('#edit-shift-modal').find('.modal-title').text('Add New Shift');
        $('#edit-shift-modal').modal('show');
    });

    // Cleanup on page unload
    $(window).on('beforeunload', function() {
        if (window.shiftManager) {
            window.shiftManager.destroy();
        }
    });
});
</script>